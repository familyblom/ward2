<div class="row">
<!--   
  col-xs-1
  col-sm-2
  col-md-3
  col-lg-4 -->
  <div class="col-sm-9">
    <h1 class='text-center'>Farmington Meadows Ward</h1>
    
    <p class='text-center'>In the infant stages of this site, its primary purpose is to collect Farmington Meadows Ward boundary emergency contact information.</p>
 
  </div>
  <div class="col-sm-3 text-center">
    <%= image_tag "church.png", class: "img-responsive img-thumbnail" %>
    <% if @post.present? %>
      <h2> Featured blog post</h2>
      <hr />
      <div class='well red-well'>
        <h3> <%= link_to @post.title, post_path(@post) %></h3>
        <p>
          <em><%= @post.author %></em> | <%= time_tag( @post.published_at ) %>
        </p>

        <%= simple_format( truncate(@post.body, length: 300, separator: ' ', omission: "... #{ link_to 'Continue Reading >', post_path(@post) }" ) ) %>
      </div>

    <% end %>

  </div>  
</div>

